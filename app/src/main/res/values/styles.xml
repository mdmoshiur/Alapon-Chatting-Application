<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- bottom nav theme -->
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/activeNavColor</item>
        <item name="android:textColorSecondary">@color/inactiveNavColor</item>
    </style>

    <!-- style for header field -->
    <style name="FieldHeaderTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- style toolbar text -->
    <style name="ToolbarText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/activeNavColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- edit text style-->
    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">18dp</item>
        <item name="android:backgroundTint">@color/inactiveNavColor</item>
    </style>

</resources>
