<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:text="8.11 pm"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/message_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/chat_item_right_background"
        android:padding="12dp"
        android:text="hello baal ekta, eto time nosto koris na. samne onek kharap time ashtese. ar eto class miss dish naa"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintRight_toLeftOf="@+id/message_sent_id"
        app:layout_constraintTop_toBottomOf="@+id/message_time_id"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent=".70" />

    <TextView
        android:id="@+id/message_seen_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/message_seen_background"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="seen"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/message_id"
        app:layout_constraintTop_toBottomOf="@+id/message_id" />


    <ImageView
        android:id="@+id/message_sent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/message_id"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>