<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/message_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.11 pm"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_item_left_profile_image_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_time_id" />

    <TextView
        android:id="@+id/message_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/chat_item_left_background"
        android:padding="12dp"
        android:text="hello"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/chat_item_left_profile_image_id"
        app:layout_constraintTop_toBottomOf="@+id/message_time_id"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent=".65" />

</androidx.constraintlayout.widget.ConstraintLayout>