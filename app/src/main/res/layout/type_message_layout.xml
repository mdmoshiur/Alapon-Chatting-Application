<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/type_message_camera_icon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/icon_background"
        android:padding="8dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/type_message_edit_text_id"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/type_message_send_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/icon_background"
        android:padding="8dp"
        android:src="@drawable/ic_send_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/type_message_edit_text_id"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/type_message_edit_text_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Type a message..."
        android:inputType="text"
        android:maxLines="3"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/type_message_send_message_id"
        app:layout_constraintStart_toEndOf="@+id/type_message_camera_icon_id"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/type_message_emoji_icon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_emoji_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/type_message_edit_text_id"
        app:layout_constraintEnd_toEndOf="@+id/type_message_edit_text_id" />

</androidx.constraintlayout.widget.ConstraintLayout>